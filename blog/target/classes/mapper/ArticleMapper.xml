<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mirror.mapper.ArticleMapper">

    <resultMap id="BaseResultMap" type="com.mirror.pojo.Article">
            <id property="postId" column="post_id" jdbcType="INTEGER"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="created" column="created" jdbcType="TIMESTAMP"/>
            <result property="lastModified" column="last_modified" jdbcType="TIMESTAMP"/>
    </resultMap>
    <insert id="addArticle" parameterType="com.mirror.pojo.Article">
        insert into article(title,content,user_id,created,last_modified) values (#{title},#{content},#{userId},now(),now())
    </insert>
    <update id="updateArticle">
        update article set title = #{title}, content = #{content},last_modified = now() where post_id = #{postId}
    </update>
    <delete id="deleteArticle">
        delete from article where post_id = #{postId}
    </delete>
    <select id="checkArticle" resultType="com.mirror.pojo.Article">
        select * from article where post_id = #{postId} and user_id = #{userId}
    </select>
    <select id="getInfoById" resultType="com.mirror.pojo.Article">
        select * from article where post_id = #{id}
    </select>

</mapper>
